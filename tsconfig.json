{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "./src/app/core/*"
      ],
      "@feature/*": [
        "./src/app/feature/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "types": [
      "node"
    ],
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
